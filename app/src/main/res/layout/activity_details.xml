<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/myPosterImage"
            android:layout_width="288dp"
            android:layout_height="496dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/myOverView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />





        <TextView
            android:id="@+id/myOverView"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
            android:textColor="#E41515"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myPosterImage"
            />



        <TextView
            android:id="@+id/myReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="28/5/2000"
            android:textColor="#E41515"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/myOriginal_language"
            app:layout_constraintStart_toStartOf="@id/myOriginal_language"
            app:layout_constraintTop_toBottomOf="@id/myOriginal_language"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/myOriginal_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="eg"
            android:layout_marginTop="5dp"
            android:textColor="#E41515"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/myOverView"
            app:layout_constraintStart_toStartOf="@+id/myOverView"
            app:layout_constraintTop_toBottomOf="@id/myOverView"
            android:padding="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>